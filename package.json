{
  "name": "notes",
  "version": "1.0.0",
  "description": "A simple notes app that encrypts your data before heading to the server",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "directories": "mkdir -p dist",
    "prebuild": "npm run directories",
    "predev": "npm run directories",
    "build:js": "browserify -t babelify src/js/index.js > dist/index.js",
    "build:html": "cp -r src/html/index.html dist",
    "build:css": " sassc --sourcemap --style compressed src/scss/index.scss | postcss --use autoprefixer > dist/index.css",
    "build:assets": "cp -r src/assets/* dist",
    "build": "npm run build:js; npm run build:html; npm run build:css; npm run build:assets",
    "serve": "cd dist; http-server -p 7777",
    "watch": "watchify -v -t babelify src/js/index.js -o dist/index.js",
    "dev": "npm run build; npm run watch & npm run start",
    "start": "npm run build; npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adregan/notes.git"
  },
  "author": "Duncan Regan",
  "license": "SEE LICENSE IN LICENSE",
  "bugs": {
    "url": "https://github.com/adregan/notes/issues"
  },
  "homepage": "https://github.com/adregan/notes#readme",
  "dependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "classnames": "^2.2.1",
    "history": "^1.13.1",
    "immutable": "^3.7.5",
    "kbpgp": "^2.0.49",
    "mongoose": "^4.3.2",
    "react": "^0.14.3",
    "react-cookie": "^0.4.3",
    "react-dom": "^0.14.3",
    "react-redux": "^4.0.1",
    "react-router": "^1.0.3",
    "redux": "^3.0.5",
    "redux-thunk": "^1.0.3",
    "scrypt": "^5.4.1",
    "superagent": "^1.5.0"
  },
  "devDependencies": {
    "redux-devtools": "^3.0.0"
  }
}
